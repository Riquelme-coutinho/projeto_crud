<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= game.title %> - Digitação
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/jogo_digitacao.css">
</head>

<body>
    <div class="container">
        <div class="card">
            <div class="stat-box">
                <div>WPM</div>
                <div class="stat-value" id="wpm">0</div>
            </div>
            <div class="stat-box">
                <div>Tempo</div>
                <div class="stat-value" id="timer">0s</div>
            </div>
            <div class="stat-box">
                <div>Precisão</div>
                <div class="stat-value" id="accuracy">100%</div>
            </div>
        </div>

        <div class="game-area">
            <div class="typing-area" id="quoteDisplay"></div>
            <textarea class="typing-input" id="quoteInput" placeholder="Comece a digitar aqui..."></textarea>
        </div>

        <div id="resultArea" class="result-area" style="display: none;">
            <h3>Jogo Finalizado!</h3>
            <p id="final-stats"></p>
            <button onclick="window.location.reload()" class="btn-restart">Jogar Novamente</button>
            <a href="/jogos" class="btn-back">Voltar para Jogos</a>
        </div>
    </div>

    <script>
        window.textoDoJogo = <%- JSON.stringify(game.text_content || "") %>;
    </script>
    <script src="/js/jogo_digitacao.js"></script>
</body>

</html>